{
    "hexconverter":{
        "window": {
            "id": "toolkit-block-hex",
            "class": "toolkit-block",
            "style": ""
        },
        "window-head": {
            "title": "HexConverter - ToolkitSwiss"
            ,"style": ""
            ,"class": ""
        },
        "window-options":{
            "options": ["hex-conv", "hex-calc"],
            "options-title": ["HexConverting", "HexCalculator"],
            "options-attr":[
                ["container='hexconverter-container'"],
                ["container='hexcalc-container'"]
            ]
        },
        "window-content":{
            "contents":["hexconverter-container", "hexcalc-container"],
            "data-contents":{
                "hexconverter-container":{
                    "class": "noback",
                    "style": "width:100%;height:100%;background-color:white;text-align:center;",
                    "html":[
                        "<ul>",
                        "<li class='tkcont-child'><div id='data-elements' class='noback'>",
                        "  <div class='title' style='height:22px !important;padding:0px !important;margin:0px !important;'>Hexdecimal</div>",
                        "    <textarea style='width:100%;height:150px;' class='hexstring'></textarea>",
                        "</div></li>",

                        "<li class='tkcont-child'><div id='data-elements' class='noback'>",
                        "  <div class='title' style='padding:0px !important;margin:0px !important;'>",
                        "    <select class='opt-conv'>",
                        "      <option value='dec'>Decimal</option>",
                        "      <option value='string'>String</option>",
                        "    </select>",
                        "  </div>",
                        "  <textarea style='width:100%;height:150px;' class='hexresult'></textarea>",
                        "</div></li></ul>",

                        "<div id='converter-options'>",
                        "  <div class='error-raise'></div>",
                        "  <br/>",
                        "  <button class='btnConverter' style='padding:1px;'>Convert</button>",
                        "</div>"
                    ]
                },
                "hexcalc-container": {
                    "style": "display:none",
                    "class": "noback",
                    "html": [
                        "<div id='hexcalc-data' class='hexcalc-data' style='width:100%;height:100%;text-align:center;float:left;'>",
                        "  <div class='title' style='font-size:14px;'>Hex Calculator</div>",
                        "    <input class='h-one' value='' type='text' />",
                        "    <select class='opt-calc'>",
                        "      <option value='add'>+</option>",
                        "      <option value='sub'>-</option>",
                        "      <option value='mul'>*</option>",
                        "      <option value='div'>/</option>",
                        "      <option value='xor'>XOR</option>",
                        "    </select>",
                        "    <input class='h-two' value='' type='text' />",
                        "</div>",

                        "<div id='hex-result-calc' class='hex-result-calc' style='text-align:center;padding-bottom:5px;float:left;width:100%;height:22px;font-size:16px;border-bottom-color:red;border-bottom:1px solid;font-weight:bold;color:#34b233;margin-top:20px;'>",
                        "</div>",

                        "<div id='hexcalc-options' class='hexcalc-options' style='width:100%;height:100%;text-align:center;float:left;margin-top:15px;'>",
                        "  <button class='btnCalculateHex' style='padding:1px;'> Calculate </button>",
                        "</div>"
                    ]
                }
            }
        },
        "window-footer":{
            "style": "visibility:hidden;",
            "footer": ""
        }
    }    
}